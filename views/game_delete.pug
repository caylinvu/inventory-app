extends layout 

block content 

  h1 #{title}: #{game.title}
  
  p #{game.description}
  p #[strong Category:] 
    each category, index in game.category 
      a(href=category.url) #{category.name}
      if index < game.category.length - 1
        |, 
  p #[strong Price:] $#{game.price}
  p #[strong Quantity:] #{game.quantity}

  hr

  p Do you really want to delete this game?

  form(method='POST' action='')
    div.form-group
      input#gameid.form-control(type='hidden' name='gameid' required='true' value=game._id)
    button.btn.btn-primary(type='submit') Delete